<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Android20" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <!-- Dark mode -->
    <!-- Screen background if dark mode on  -->
    <style name="SCREEN">
        <item name="android:background">#2C2A2A</item>
    </style>
    <!-- Text background if dark mode on -->
    <style name="TEXT">
        <item name="android:textColor">#FFF</item>
    </style>
    <style name="Text">
        <item name="android:background">#F8EAD2</item>
        <item name="android:textColor">#000</item>
    </style>
    <style name="VIEW">
        <item name="android:background">#A1A19C</item>
        <item name="android:textColor">#000</item>
    </style>
    <!-- Button background if dark mode on -->
    <style name="BUTTON">
        <item name="android:background">#156F39</item>
        <item name="android:textColor">#232323</item>
    </style>
    <style name="Button">
        <item name="android:background">@drawable/round_back_white_stoke</item>
        <item name="android:textColor">#000</item>
    </style>
    <style name="CHECK">
        <item name="android:backgroundTint">#FFF</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name = "DIALOG">
        <item name="android:backgroundTint">#fff</item>
    </style>
</resources>