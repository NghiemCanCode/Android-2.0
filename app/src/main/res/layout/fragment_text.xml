<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/SCREEN"
    tools:context=".fragment.TextFragment">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="270dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="130dp"
        style="@style/TEXT"
        android:layout_marginEnd="60dp"
        android:gravity="center"
        android:text="Đề thi gồm 5 câu hỏi được lấy ngẫu nhiên từ tất cả các bài học. Bạn có 120 giây cho phần thi thử của mình, bạn đã sẳn sàng?"
        android:textSize="25sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnThi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/roung_back_green"
        android:padding="20dp"
        android:text="Bắt đầu thi"
        android:layout_marginTop="90dp"
        android:textAllCaps="false"
        android:textSize="20sp" />


</FrameLayout>