<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f3eb"
    tools:context=".Lesson.LessonQuizActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tbLessonQuizz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#03ef62"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Shiba" />

    <TextView
        android:id="@+id/tvQuizz"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="25dp"
        android:backgroundTint="#fff"
        android:gravity="center"
        android:padding="20dp"
        android:text="Đề"
        android:textColor="#000"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tbLessonQuizz" />

    <Button
        android:id="@+id/btAnswerA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="48dp"
        android:backgroundTint="#ffff"
        android:gravity="start"
        android:paddingStart="25dp"
        android:text="a"
        android:textAllCaps="false"
        android:textColor="#000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvQuizz" />

    <Button
        android:id="@+id/btAnswerB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="48dp"
        android:backgroundTint="#ffff"
        android:gravity="start"
        android:paddingStart="25dp"

        android:text="a"

        android:textAllCaps="false"
        android:textColor="#000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btAnswerA" />

    <Button
        android:id="@+id/btAnswerC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="48dp"
        android:backgroundTint="#ffff"
        android:gravity="start"
        android:paddingStart="25dp"

        android:text="a"
        android:textAllCaps="false"

        android:textColor="#000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btAnswerB" />

    <Button

        android:id="@+id/btAnswerD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="48dp"
        android:backgroundTint="#ffff"


        android:gravity="start"
        android:paddingStart="25dp"
        android:text="ans"
        android:textAllCaps="false"
        android:textColor="#000"
        app:layout_constraintLeft_toLeftOf="parent"


        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btAnswerC" />


    <Button
        android:id="@+id/btBack"
        android:layout_width="wrap_content"
        android:text="Back"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginRight="32dp"
        app:layout_constraintRight_toLeftOf="@id/glCenter"
        app:layout_constraintTop_toBottomOf="@id/btAnswerD" />


    <Button
        android:id="@+id/btNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="32dp"
        android:text="Next"
        app:layout_constraintLeft_toRightOf="@id/glCenter"
        app:layout_constraintTop_toBottomOf="@id/btAnswerD" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"
    />

</androidx.constraintlayout.widget.ConstraintLayout>